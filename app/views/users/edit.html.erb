<div class='body'>
	<div class='container'>
		<% if @user.errors.any? %>
		<h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
		<% end %>
		<h2>User info</h2>
		<%= form_for (@user) do |f| %>
			<div class="field">
				<label for="user_name">Name</label>
				<%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
			</div>
			<div class="field">
				<label for="user_image">Image</label>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>
			<div class="field">
				<label for="user_introduction">Introduction</label>
				<%= f.text_area :introduction, autofocus: true, class:"form-control"%>
			</div>
			<div class="actions">
				<%= f.submit 'Update User' %>
			</div>
		<% end %>
	</div>
</div>